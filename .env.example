# Example environment variables for YoureHired
# Copy to .env and fill in your own values

# --- Model Provider (pick one) ---
# Option 1: OpenAI (default if set)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Option 2: Google Gemini (free tier fallback â€” used when OPENAI_API_KEY is empty)
GOOGLE_API_KEY=
GEMINI_MODEL=litellm/gemini/gemini-2.5-flash

# Backend Settings
DEBUG=false
CORS_ORIGINS=["http://localhost:3000"]

# GitHub Scout
# Generate a token at: GitHub Settings > Developer settings > Personal access tokens
# Required scope: public_repo (read access to public repositories)
GITHUB_TOKEN=
SCOUT_DB_PATH=data/scout.db
